@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Console8_ValidationUtils.Pages.IndexModel
@{
}
<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">  
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css">  
        <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500&display=swap" onerror="alert('не загрузить '+this.href)" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" onerror="alert('не загрузить '+this.href)" rel="stylesheet" />
        <script src="https://www.google.com/recaptcha/api.js" onerror="alert('не загрузить '+this.src)"></script>
    </head>
    <body>   

        <!-- card -->
        <div class="card">
            <div class="card-header">

                <div class="d-flex">
                    <div class="p-2" onclick="location.href='/Login';">Авторизация</div>
                    <div class="p-2" onclick="location.href='/Registration';">Регистрация</div>
                    <div class="ml-auto p-2">
                        <div class="input-group">
                            <input class="form-control" />
                        </div>
                    </div>
                </div>

            </div>
            <div class="card-body" id="CardBody">                
            </div>
        </div>

        <!-- container -->
        <div class="container-fluid" id="ContainerFluid">
            <div class="row">
                <div class="col-4" id="LeftContent"></div>
                <div class="col-8" id="Content"></div>
            </div>
        </div>

        <!-- navlist -->
        <div id="NavListGroup">
            <h4> Навигация </h4>
            <style>
                .list-group-item{
                    padding: 5px 10px;
                }
            </style>
            <ul class="list-group">
                @for(int i=0; i<Model.NavMenu.Count(); i++)
                {
                    <li class="list-group-item" >                         
                        @Model.NavMenu[i].Label
                    </li>
                }                
            </ul>
        </div>

        <!-- input-form -->
        <div id="LoginForm">
        @switch( Model.ViewName )
        {
            case "Login":
            {
                <h4 class="text-center"> Авторизация </h4>
                <form>
                    <input name="Service" value="ILogin" type="hidden" />
                    <input name="Action"  value="Signin" type="hidden" />
                    <div class="form-group">
                        <label for="exampleInputEmail1">Почта</label>
                        <input asp-for="Input" class="form-control" 
                                placeholder="Почта">
                        <small id="emailHelp" class="form-text text-muted">
                            Используйте собственную электронную почту
                        </small>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Пароль</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" 
                                placeholder="Пароль">
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">
                            Запомнить
                        </label>
                    </div>
                    <div class="form-check" align="right">
                        <button type="submit" class="btn btn-primary btn-sm">
                            Выполнить
                        </button>
                    </div>                
                </form>
                break;       
            }
            default:
            {
                break;
            }    
        }            
        </div>   
        
        <!-- layout -->
        <script>           
            Content.appendChild(LoginForm);
            LeftContent.appendChild(NavListGroup);
            CardBody.appendChild(ContainerFluid);
        </script>
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"></script>
    </body>
</html>